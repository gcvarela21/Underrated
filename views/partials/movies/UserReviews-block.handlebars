<div class="row">
    <div class="box">
        <div class="col-12 d-flex justify-content-center">
            <div class="row">
                <div id="viewAllofThisUsersReviews-block">
                    <div class="col-4">
                        <img class="posterSize" src="{{poster}}" alt="Movie Poster">
                    </div>
                    <div class="col-8">
                        <div class="row">
                            <div class="col-12">
                            <p class="">{{movies.Title}}</p>
                            </div>
                            <div class="col-12">
                            <p class="fullFormLite">({{movies.year}})</p>
                            </div>
                            <div class="col-6">
                            <p class="fullFormLite">{{rating}}</p>
                            </div>
                            <div class="col-6">
                            <p class="fullFormLite">{{genre}}</p>
                            </div>
                            <div class="col-12">
                            <p class="fullFormLite">{{plot}}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <p class="fullFormLite">{{userName}}</p>
                    </div>
                    <div class="col-12">
                        <p class="fullFormLite">{{review}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>