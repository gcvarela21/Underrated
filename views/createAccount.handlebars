<div class="row">
    <div class="col-12 d-flex justify-content-center">
         <h1>Join Our Movie Members Community</h1>
    </div>
</div>
  
<div class="row d-flex justify-content-center">
    <!-- START OF div column container for the login FORM/Input -->
    <!-- define a border for this part -->
    <div class="col-12 d-flex justify-content-center">
        <!-- Login Title with row and column !!! NO BORDER !!!! -->
      <div class="row d-flex justify-content-center">           
          <div class="col-12 d-flex justify-content-center">
            <h2>LOGIN</h2>            
                <!-- start of Nessted login input field -->
                <div class="row d-flex justify-content-center">
           
                    <div class="col-12 d-flex justify-content-center">
                             <Input id="username"></Input>
                             <Input id="password"></Input>
                             <button id="signup">Create Account</button>
                             <P><a href="/login">Login</a></P>                                       
                    </div>                   
                </div>
                <!-- start of Nessted login input field -->
           </div>      
      </div>
    </div>
     <!-- END OF div column container for the login FORM/Input -->
</div>

<script>
    $(document).on("click", "#signup", function () {
        
        let newUser = {
            username: $("#username").val(),
            password: $("#password").val()
        };

        $.ajax({
            url: "/api/signup",
            method: "POST",
            data: newUser
        }).then(function(response) {
            console.log(response);
        })
    })
</script>